{
  "layer": "bottom",
  "position": "bottom",
  "modules-left": [
    "sway/workspaces",
    "sway/mode"
  ],
  "modules-center": ["privacy"],
  "modules-right": [
    "network",
    "pulseaudio",
    "battery",
    "tray",
    "clock"
  ],
  "mode": {
    "format": "overlay"
  },
  "privacy": {
    "icon-spacing": 4,
    "icon-size": 18,
    "transition-duration": 250,
    "modules": [
      {
        "type": "screenshare",
        "tooltip": true,
        "tooltip-icon-size": 24
      },
      {
        "type": "audio-out",
        "tooltip": true,
        "tooltip-icon-size": 24
      },
      {
        "type": "audio-in",
        "tooltip": true,
        "tooltip-icon-size": 24
      }
    ]
  },
  "pulseaudio": {
    "on-click": "pavucontrol",
    "on-click-middle": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "format": "{icon}  {volume}%",
    "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "Ôñê",
      "headset": "Ôñê",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": [
        "ÔÄß",
        "ÔÄ®"
      ]
    },
    "scroll-step": 5
  },
  "battery": {
      "format": "{icon} {capacity}%",
      "format-alt": "{icon} {capacity}% {time}"
  },
  "clock": {
    "format": "{:%m/%d ÔÄó  %H:%M}",
    "tooltip-format": "{:%a}"
  },
  "network": {
    "format": "net: {ifname}",
    "format-disconnected": "‚ùå{ifname}",
    "format-ethernet": "üåê {ipaddr}/{cidr}",
    "format-linked": "",
    "format-wifi": "Ôá´{signalStrength}%",
    "interval": 1,
    "tooltip-format-ethernet": "{bandwidthUpBytes}/{bandwidthDownBytes}",
    "tooltip-format-wifi": "{essid} {frequency}"
  }
}
