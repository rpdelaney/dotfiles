# i3status configuration file.
# see "man i3status" for documentation.

general {
        colors = true
        interval = 5
#       output_format = "none"
}

#order += "ipv6"
order += "disk /"
order += "run_watch DHCP"
#order += "run_watch VPN"
#order += "wireless wlo1"
order += "ethernet enp42s0"
#order += "battery 0"
#order += "load"
order += "cpu_usage"
order += "gpu_usage"
order += "tztime local"

wireless wlo1 {
        format_up = "wlo1 (%quality at %essid, %bitrate / %frequency) %ip"
        format_down = "wlo1 down"
}

ethernet enp42s0 {
        # if you use %speed, i3status requires cap_net_admin capability
        format_up = "enp42s0 %ip (%speed)"
        format_down = "enp42s0 down"
}

battery 0 {
        format = "%status %percentage %remaining"
        format_down = "NO BATTERY"
        status_chr = "CHRG"
        status_bat = "BAT"
        status_unk = "BATTERY UNKNOWN"
        status_full = "FULL"
        low_threshold = 15
        hide_seconds = true
        integer_battery_capacity = true
}

run_watch DHCP {
        pidfile = "/var/run/dhcpcd*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
        format = "%a %Y-%m-%d %H:%M"
}

load {
        format = "load %1min"
        max_threshold = "0.5"
        format_above_threshold = "load HIGH %1min"
}

cpu_usage {
        format = "cpu %usage"
        max_threshold = 95
        format_above_threshold = "cpu HIGH %usage"
        degraded_threshold = 65
        format_above_degraded_threshold = "cpu WARN %usage"
}

read_file gpu_usage {
        format = "gpu %usage"
        path = "/sys/class/drm/card0/device/gpu_busy_percent"
}

disk "/" {
        format = "%avail"
        prefix_type = custom
        low_threshold = 20
        threshold_type = percentage_avail
}

# EOF
