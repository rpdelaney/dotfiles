# shellcheck disable=SC2154
if [[ ! -d $dotfiles_dest ]]; then echo "dotfiles_dest var not found: $dotfiles_dest" 1>&2; exit 1; fi

if ! command -v find &> /dev/null; then echo "Missing dependency: find" 1>&2; exit 1; fi

main() {
  cd "$HOME" || exit 1
  find "$dotfiles_dest/home/" -maxdepth 1 -mindepth 1 -exec ln -s {} \;
}

main "$@"
# vim: filetype=sh foldmethod=marker shiftwidth=2 expandtab softtabstop=4:
