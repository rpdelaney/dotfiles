#!/usr/bin/env bash
#

if ! command -v brew &> /dev/null; then echo "Missing dependency: brew" 1>&2; return 1; fi

brew_install() {
  local app
  app="$1"

  # shellcheck disable=SC2086
  brew install --display-times $app
}

main() {
  for app in "${homebrew_apps[@]}"; do
    if ! brew_install "$app" ; then
      echo "ERROR: (exit code $?) Failed to install $app" 1>&2
    fi
  done

  brew cleanup
}

homebrew_apps=(
  'aspell'
  'base64'
  'bash'
  'bash-completion'
  'binutils'
  'brew-cask-completion'
  'cmake'
  'colordiff'
  'coreutils'
  'curl --with-libssh2 --with-gssapi --with-rtmpdump'
  'dateutils'
  'dialog'
  'diffutils'
  'direnv'
  'docx2txt'
  'dos2unix'
  'enca'
  'espeak'
  'exa'
  'exiftool'
  'file-formula'
  'findutils'
  'gcc'
  'gem-completion'
  'ghostscript'
  'git'
  'glances'
  'gnu-indent'
  'gnu-sed'
  'gnu-tar'
  'gnu-which'
  'gnupg'
  'golang'
  'golangci/tap/golangci-lint'
  'grc'
  'grep'
  'gzip'
  'hashdeep'
  'htop'
  'imagemagick'
  'inetutils'
  'jq'
  'keychain'
  'less'
  'lesspipe'
  'libqalculate'
  'mailutils'
  'make'
  'mas'
  'media-info'
  'moreutils'
  'ncdu'
  'ncurses'
  'nmap'
  'npm'
  'open-completion'
  'openssh'
  'openvpn'
  'pandoc'
  'pip-completion'
  'proctools'
  'psgrep'
  'pv'
  'pwgen'
  'ranger'
  'rst-lint'
  'rsync'
  'ruby'
  'ruby-completion'
  'shellcheck'
  'sox'
  'sshfs'
  'starship'
  'sxiv'
  'terminal-notifier'
  'tig'
  'tmux'
  'tree'
  'unar'
  'util-linux'
  'vim'
  'vimpager --with-pandoc'
  'w3m'
  'watch'
  'weechat'
  'wget'
)


main "$@"

