if ! command -v brew &> /dev/null; then echo "Missing dependency: brew" 1>&2; exit 1; fi

brew_install() {
  local app
  app="$1"

  brew install "$app" || exit 1
}

main() {
  for app in "${homebrew_apps[@]}"; do
    brew_install "$app"
  done

  brew cleanup
}

homebrew_apps=(
  aspell --with-all-langs
  awscli
  baobab
  base64
  bash
  bash-completion
  binutils
  brew-cask-completion
  checkbashisms
  cmake
  colordiff
  coreutils
  csvkit
  curl --with-libssh2 --with-gssapi --with-rtmpdump
  dateutils
  dialog
  diffutils
  direnv
  dos2unix
  enca
  encfs
  exa
  exiftool
  file-formula
  findutils --with-default-names
  flake8
  gem-completion
  git --with-curl --with-openssl
  glances
  gnu-indent --with-default-names
  gnu-sed --with-default-names
  gnu-tar --with-default-names
  gnu-which --with-default-names
  gnupg
  golang
  grc
  grep --with-default-names
  gzip
  hashdeep
  htop --with-ncurses
  hub
  imagemagick
  inetutils
  jq
  keychain
  ksh
  less --with-pcre
  lesspipe --with-syntax-highlighting
  libnotify
  libqalculate
  lynx
  mailutils
  make --with-default-names
  media-info
  moreutils
  mosh
  mps-youtube
  ncdu
  ncurses
  nmap
  open-completion
  openssh
  openvpn
  pandoc
  pip-completion
  pipenv
  psgrep
  pv
  pwgen
  pyenv
