  sshfs
  sxiv
  terminal-notifier
  terraform
  terraform-docs
  terraform_landscape
  tig
  tmux
  tor --with-libscrypt
  torsocks
  tree
  unar
  vim --with-client-server --with-gettext --with-luajit --with-override-system-vi --with-tcl
  vimpager --with-pandoc
  w3m
  watch
